
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Create</h2>

<style>
    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
<div style="margin:auto;">
    @using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { @style = "width : 50%; margin: auto;" }))
    {
        <label for="fname">Mã sản phẩm</label>
        <input type="text" id="fname" name="SanPhamID" style="background-color:#5d5e63;" placeholder="Mã sản phẩm.." required />
        <label for="lname">Tên sản phẩm</label>
        <input type="text" id="lname" name="TenSP" style="background-color:#5d5e63;" placeholder="Tên sản phẩm.." required />
        <label for="lname">Ảnh sản phẩm</label>
        <input type="text" id="lname" name="AnhSP" style="background-color:#5d5e63;" placeholder="Ảnh sp.." required />
        <label for="lname">Số lượng sản phẩm</label>
        <input type="text" id="lname" name="SoLuongSP" style="background-color:#5d5e63;" placeholder="Số lượng sản phẩm.." required />
        <label for="lname">Giá sản phẩm</label>
        <input type="text" id="lname" name="GiaSP" style="background-color:#5d5e63;" placeholder="Giá sản phẩm.." required />
        <label for="lname">Mô tả sản phẩm</label>
        <input type="text" id="lname" name="MotaSP" style="background-color:#5d5e63;" placeholder="Mô tả sản phẩm.." required />
        <label for="country">ĐVT</label>
        <select id="country" style="width:20%;background-color:#5d5e63;" name="DVT" required>
            <option value="Cái" selected>Cái</option>
            <option value="Viên">Viên</option>
            <option value="Bao" selected>Bao</option>
            <option value="m3">m3</option>
            <option value="Ống" selected>ống</option>
        </select>
        <br />
        <label for="lname">Danh mục ID</label>
        <input type="text" id="lname" name="DanhMucID" style="background-color:#5d5e63;" placeholder="Danh mục id.." required />


        <input type="submit" value="Xác nhận chỉnh sửa">}
</div>

