@model MVC_NHOM8.Models.USER
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
        {
            //@Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Register</div>
                </div>
                <div class="card-body">
                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.TenDayDu)
                        @Html.TextBoxFor(m => m.TenDayDu, "", new { @class = "form-control", @placeholder = @"Tên đầy đủ" })
                        @Html.ValidationMessageFor(m => m.TenDayDu, "", new { @class = "badge badge-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailDK)
                        @Html.TextBoxFor(m => m.EmailDK, "", new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.EmailDK, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MatKhau)
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = @"Mật khẩu:" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
                    </div>
                  
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-danger" value="Register" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>


