        <div class="contener">
            <div id="trangtrai">
                <div id="danhmuc">
                    <div class="daumuc"><a>DANH MỤC SẢN PHẨM</a></div>
                    <div class="ditmuc">
                        <ul>
                            <li><a href="#" title="GẠCH">GẠCH</a></li>
                            <li><a href="#" title="THIẾT BỊ NGÀNH NƯỚC">THIẾT BỊ NGÀNH NƯỚC</a></li>
                            <li><a href="#" title="ĐỒ ĐIỆN">ĐỒ ĐIỆN</a></li>
                            <li><a href="#" title="XI MĂNG">XI MĂNG</a></li>
                            <li><a href="#" title="CÁT">CÁT</a></li>
                        </ul>
                    </div>
                </div>
                <div id="hotro">
                    <div id="pichotro">
                        <div class="logohotro">
                            <img src="../css/images/akmasa.png" title="pichtro" />
                        </div>
                        <h3>Hỗ trợ trực tuyến</h3>
                    </div>
                    <div class="support">
                        <div class="text-center">
                            <p>
                                <span class="supp-name">PHÚ DŨNG</span>
                                <br />
                                <span class="phone">0905957700</span>
                            </p>
                            <a href="skype:?chat" class="skype">
                                <img src="../css/images/skype-icon.png" />
                            </a>
                            <a href="ymsgr:sendim?pinkypinky_vn" class="yahoo">
                                <img src="../css/images/yahoo-icon.png" />
                            </a>
                        </div>
                        <div class="text-center">
                            <p>
                                <span class="supp-name">Số hotline</span>
                                <br />
                                <span class="phone">0905532254</span>
                            </p>
                        </div>
                        <div class="text-center">
                            <p>
                                <span class="supp-name">Thời gian làm việc</span>
                                <br />
                                <span class="phone">24/24</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div id="thanhtoan">
                    <div class="title-thanhtoan">
                        <a>THÔNG TIN GIAO DỊCH</a>
                    </div>
                    <div class="thongtinnganhang">
                        <div class="nganhang">
                            <img src="../css/images/nganhang/vietcombank.png" />
                            <p>
                                <strong>Ngân hàng Vietcombank</strong>
                                <br>
                                Số TK: 0011 0031 68537
                                <br>
                                Chủ TK: YẾN NHI
                                <br>
                                Chi nhánh Hội sở - Hà Nội
                            </p>
                        </div>
                        <div class="nganhang">
                            <img src="../css/images/nganhang/agribank.png" />
                            <p>
                                <strong>Ngân hàng Agribank</strong>
                                <br>
                                Số TK: 0011 0031 68537
                                <br>
                                Chủ TK: THÙY DUNG
                                <br>
                                Chi nhánh Đà Nẵng
                            </p>
                        </div>
                        <div class="nganhang">
                            <img src="../css/images/nganhang/vietinbank.png" />
                            <p>
                                <strong>Ngân hàng Vietincombank</strong>
                                <br>
                                Số TK: 0011 0031 68537
                                <br>
                                Chủ TK: THÀNH LONG
                                <br>
                                Chi nhánh Hội sở - Hà Nội
                            </p>
                        </div>
                    </div>
                </div>
                <div id="thongketruycap">
                    <div class="title-thongke">
                        <a>THỐNG KÊ TRUY CẬP</a>
                    </div>
                    <div class="so-thongke">
                        <p>Đang online: 100000</p>
                        <p>Lượt truy cập: 1000500</p>
                    </div>
                </div>
            </div>
            <div id="trangphai">
                <div class="title-gioithieu">
                    <h1>TẠO TÀI KHOẢN</h1>
                </div>
                <div class="userbox">
                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                    {
                        //@Html.ValidationSummary()
                        @Html.AntiForgeryToken()

                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Register</div>
                            </div>
                            <div class="card-body">

                                <div id="first_name" class="form-group clearfix">
                                    @Html.LabelFor(m => m.TenDayDu, new { @class = "label-fname" })
                                    @Html.TextBoxFor(m => m.TenDayDu, "", new { @class = "form-control text", @placeholder = @"Tên đầy đủ" })
                                    @Html.ValidationMessageFor(m => m.TenDayDu, "", new { @class = "badge badge-danger" })

                                </div>

                                <div id="email" class="form-group clearfix">
                                    @Html.LabelFor(m => m.EmailDK, new { @class = "label-email" })
                                    @Html.TextBoxFor(m => m.EmailDK, "", new { @class = "form-control text", @placeholder = "Email" })

                                    @Html.ValidationMessageFor(m => m.EmailDK, "", new { @class = "badge badge-danger" })
                                    @if (ViewBag.error != null)
                                    {
                                        <span class="badge badge-danger">@ViewBag.error</span>
                                    }
                                </div>
                                
                                <div id="password" class="form-group clearfix">
                                    @Html.LabelFor(m => m.MatKhau, new { @class = "label-pass"})
                                    @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control text", @placeholder = @"Mật khẩu:" })
                                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
                                </div>

                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-danger" value="Register" />
                                </div>
                            </div>
                        </div>

                    }

                    <form accept-charset="UTF-8" action="/account" id="create_customer" method="post">
                        <input name="form_type" type="hidden" value="create_customer">
                        <input name="utf8" type="hidden" value="✓">

                       

                        <div class="action_bottom">
                            <input class="btn" type="submit" value="Đăng ký">
                        </div>
                        <div class="req_pass">
                            <a class="come-back" href="/account/login">Quay về</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


